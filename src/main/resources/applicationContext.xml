<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="rockMusicBean"
          class="alishev.springcourse.RockMusic">
    </bean>
    <bean id="rapMusicBean"
          class="alishev.springcourse.RapMusic"/>
    <bean id="classicalMusicBean"
          class="alishev.springcourse.ClassicalMusic"/>

    <bean id="musicPlayer"
          class="alishev.springcourse.MusicPlayer"
          scope="prototype">
        <property name="musicList">
            <list value-type="alishev.springcourse.Music">
                <ref bean="rockMusicBean"/>
                <ref bean="rapMusicBean"/>
                <ref bean="classicalMusicBean"/>
            </list>
        </property>

        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>

</beans>